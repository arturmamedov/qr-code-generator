# QR Code Manager - Apache Configuration
# Handles security, authentication, and URL rewriting

# Enable RewriteEngine for clean URLs
RewriteEngine On
RewriteBase /

# ============================================
# SECURITY: Block direct access to sensitive files
# ============================================

# Protect config.php from direct access
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

# Protect config.example.php from direct access
<Files "config.example.php">
    Order Allow,Deny
    Deny from all
</Files>

# Protect database.sql from direct access
<Files "database.sql">
    Order Allow,Deny
    Deny from all
</Files>

# Block access to .git directory
<DirectoryMatch "\.git">
    Order Allow,Deny
    Deny from all
</DirectoryMatch>

# Block access to logs directory
<DirectoryMatch "logs">
    Order Allow,Deny
    Deny from all
</DirectoryMatch>

# ============================================
# AUTHENTICATION: Protect admin pages
# ============================================

# Require authentication for admin pages
<FilesMatch "^(index|create|edit|api)\.php$">
    AuthType Basic
    AuthName "QR Code Manager - Admin Area"
    AuthUserFile /home/user/qr-code-generator/.htpasswd
    Require valid-user
</FilesMatch>

# ============================================
# CLEAN URL REWRITING
# ============================================

# Skip rewrite for existing files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Skip rewrite for admin pages (they need direct access)
RewriteCond %{REQUEST_URI} !^/(index|create|edit|api)\.php

# Rewrite clean URLs to redirect handler
# Example: /ABC123 or /summer-sale -> /r.php?c=ABC123 or /r.php?c=summer-sale
# Supports letters, numbers, hyphens, underscores (1-33 characters)
RewriteRule ^([A-Za-z0-9_-]{1,33})$ r.php?c=$1 [L,QSA]

# ============================================
# PERFORMANCE & SECURITY HEADERS
# ============================================

# Prevent directory browsing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

# Enable GZIP compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

